<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tisso Vison Gift Guide</title>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    {{  'section-banner-gift-guide.css' | asset_url | stylesheet_tag }}
</head>
<body>
    
        <div class="container">
            <!-- Banner Header -->
             <div class="banner-header" id="bannerHeader">
                <button class="toggle-button" id="toggleBtn">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                <div class="logo">
                    <img src="{{ 'Group 1000007777.png' |  asset_url}}" alt="{{ shop.name }}" width="151" height="19">
                </div>
                
                <p class="header-text">{{ section.settings.header_text }}</p>
                <div class="header-button">
                    <span class="button-word">{{ section.settings.button_text }}</span>
                    <span class="button-arrow"> → </span>
                </div>

             </div>
            <!-- Mobile Menu (hidden by default)  -->
                <div class="mobile-menu" id="mobileMenu">
                    <p class="header-text-mobile">{{ section.settings.header_text }}</p>
                    <div class="header-button-mobile">
                        <span class="button-word-mobile">{{ section.settings.button_text }} </span>
                        <span class="button-arrow-mobile">→</span>
                    </div>
                </div>
            <!-- Text Content (Visible only on mobile)  -->
            <div class="text-content">
                <h1>{{ section.settings.heading }} </h1>
                <p> Discover Joy: Your Ultimate Holiday Gift Destination.</p>
            </div>
            <!-- Main banner -->
             <div class="main-banner">
                <img src="{{ 'Frame.png' |  asset_url }}" alt="{{ shop.name }}" width="1440" height="390">
        
                <!-- Mobile button Over Banner -->
                <div class="banner-button-mobile">
                    <div class="banner-button-word">
                        {{ section.settings.cta_text }}
                    </div>
                    <span class="button-arrow"> → </span>

                </div>
            </div>
            
            <!-- Second banner -->
            <div class="second-banner">
                <div class="second-banner-content">
                    <div class="second-banner-content-inner">
                        <div class="banner-content">
                            <h1>{{ section.settings.heading }}</h1>
                            <p> {{ section.settings.description }}</p>
                            <div class="banner-button">
                                <div class="banner-button-word">
                                    {{ section.settings.cta_text }}
                                </div>
                                  <span class="button-arrow"> → </span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="second-banner-image">
                    <img src="{{'Frame (1).png' |  asset_url}}" alt="{{ shop.name }}" width="full" height="390px">
                </div>
            </div>
            <!-- Bottom banner -->
            <div class="bottom-banner">
                <p>{{ section.settings.footer_text }}</p>
            </div>
            <!-- Mobile Bottom banner -->
                 <div class="bottom-banner-mobile">
                <p class="mobile-footer-text">{{ section.settings.footer_text_mobile }}</p>
            </div>
        </div>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('toggleBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        const bannerHeader = document.getElementById('bannerHeader');
        let menuOpen = false;

        //Toggle menu function
        function toggleMenu() {
            menuOpen = !menuOpen;
            if(menuOpen){
                mobileMenu.style.display = 'flex';
                bannerHeader.style.backgroundColor = '#f7f7f7';
                //Animate toggle to X
                toggleBtn.style.transform = 'rotate(90deg)';
                toggleBtn.querySelectorAll('span')[0].style.transform = 'rotate(45deg) translate(5px , 5px)';
                toggleBtn.querySelectorAll('span')[1].style.opacity = '0';
                toggleBtn.querySelectorAll('span')[2].style.transform = 'rotate(-45deg) translate(4px , -4px)';
            } else{
                mobileMenu.style.display = 'none';
                bannerHeader.style.backgroundColor = '#f7f7f7';
                //Revert to toggle
                toggleBtn.style.transform = 'rotate(0)';
                toggleBtn.querySelectorAll('span')[0].style.transform = 'none';
                toggleBtn.querySelectorAll('span')[1].style.opacity = '1';
                toggleBtn.querySelectorAll('span')[2].style.transform = 'none';
            }
        }
        //Toggle menu on button click
        toggleBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            toggleMenu();
        });
        //Close menu when click outside
        document.addEventListener('click', function(event) {
            if (menuOpen && !toggleBtn.contains(event.target) && !mobileMenu.contains(event.target)) {
                toggleMenu();
            }
        });
        //Handle resize - close menu on large screens
    window.addEventListener('resize', function() {
        if (window.innerWidth > 768 && menuOpen ){
            toggleMenu();
        }
    });
        //Add hover effects to buttons
        document.querySelectorAll('.header-button, .banner-button').forEach(button => {
            button.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-1px)';
                this.style.boxShadow = '0 4px 8px rgba(0,0,0,0.2)';
            });
             button.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = 'none';
            });
        });
    });
</script>
</body>
</html>

